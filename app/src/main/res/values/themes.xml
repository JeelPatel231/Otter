    <style name="Base.Theme.Otter" parent="Theme.Material3.DayNight.NoActionBar" />

    <style name="Theme.Otter" parent="Base.Theme.Otter" >
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>

        <item name="android:windowLightStatusBar">?attr/isLightTheme</item>
        <item name="android:windowSoftInputMode">adjustPan</item>
    </style>
    
    <style name="Theme.Otter.TranslucentNavigation" parent="Base.Theme.Otter">
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="circleImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="BaseToolBarTextAppearance" parent="android:TextAppearance">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="ToolBarTextAppearanceExpanded" parent="BaseToolBarTextAppearance">
        <item name="android:textSize">22sp</item>
    </style>

    <style name="ToolBarTextAppearanceCollapsed" parent="BaseToolBarTextAppearance">
        <item name="android:textSize">18sp</item>
    </style>
</resources>