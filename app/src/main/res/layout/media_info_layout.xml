<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/text_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="18dp">

            <TextView
                android:id="@+id/mean_score_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mean Score" />


            <TextView
                android:id="@+id/mean_score_holder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                tools:text="6.6 / 10" />

            <TextView
                android:id="@+id/status_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/mean_score_text"
                tools:text="Status" />


            <TextView
                android:id="@+id/status_holder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/mean_score_text"
                android:layout_alignParentEnd="true"
                tools:text="Releasing" />

            <TextView
                android:id="@+id/total_media_item_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/status_text"
                android:text="@string/total_media" />


            <TextView
                android:id="@+id/total_media_item_holder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/status_text"
                android:layout_alignParentEnd="true"
                tools:text="10 | 12" />


            <TextView
                android:id="@+id/average_duration_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/total_media_item_text"
                android:text="Average Duration" />


            <TextView
                android:id="@+id/average_duration_holder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/total_media_item_text"
                android:layout_alignParentEnd="true"
                tools:text="24 min" />

            <TextView
                android:id="@+id/format_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/average_duration_text"
                android:text="Format" />


            <TextView
                android:id="@+id/format_holder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/average_duration_text"
                android:layout_alignParentEnd="true"
                tools:text="TV" />

            <TextView
                android:id="@+id/source_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/format_text"
                android:text="Source" />


            <TextView
                android:id="@+id/source_holder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/format_text"
                android:layout_alignParentEnd="true"
                tools:text="Manga" />

            <TextView
                android:id="@+id/studio_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/source_text"
                android:text="Studio" />


            <TextView
                android:id="@+id/studio_holder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/source_text"
                android:layout_alignParentEnd="true"
                tools:text="Studio Pallete" />


            <TextView
                android:id="@+id/season_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/studio_text"
                android:text="Season" />


            <TextView
                android:id="@+id/season_holder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/studio_text"
                android:layout_alignParentEnd="true"
                tools:text="Spring 2023" />


            <TextView
                android:id="@+id/start_date_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/season_text"
                android:text="Start Date" />


            <TextView
                android:id="@+id/start_date_holder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/season_text"
                android:layout_alignParentEnd="true"
                tools:text="6 April, 2023" />


            <TextView
                android:id="@+id/end_date_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/start_date_text"
                android:text="End Date" />


            <TextView
                android:id="@+id/end_date_holder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/start_date_text"
                android:layout_alignParentEnd="true"
                tools:text="\?\?" />

        </RelativeLayout>

        <TextView
            style="?attr/textAppearanceHeadlineSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginHorizontal="18dp"
            android:layout_marginBottom="8dp"
            android:text="Synopsis" />

        <TextView
            android:layout_marginHorizontal="18dp"
            android:id="@+id/synopsis_text_holder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="8"
            tools:text="@tools:sample/lorem/random" />


        <TextView
            style="?attr/textAppearanceHeadlineSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="18dp"
            android:layout_marginTop="18dp"
            android:text="Synonyms" />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/synomyns_chip_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="18dp" />
        </HorizontalScrollView>

