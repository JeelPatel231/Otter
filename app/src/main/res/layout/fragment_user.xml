<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context=".ui.fragments.home.UserFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="32dp">

        <TextView
            android:id="@+id/username"
            style="?attr/textAppearanceHeadline6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="JeelPatel231" />

        <TextView
            android:id="@+id/episodes_count_holder"
            style="?attr/textAppearanceCaption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/username"
            tools:text="Episodes Watched : 13123" />

        <TextView
            android:id="@+id/chapters_count_holder"
            style="?attr/textAppearanceCaption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/episodes_count_holder"
            tools:text="Chapters Read : 1232" />

        <com.google.android.material.imageview.ShapeableImageView
            android:background="@drawable/rounded_corner_shape"
            android:id="@+id/avatar_holder"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_alignParentEnd="true"
            android:scaleType="centerInside"
            android:adjustViewBounds="true"
            app:strokeColor="?attr/colorOutline"
            app:strokeWidth="1dp"
            android:padding="2dp"
            app:tint="?attr/colorOnSurface"
            app:shapeAppearanceOverlay="@style/circleImageView"
            android:src="@drawable/round_settings_24" />

    </RelativeLayout>

    <LinearLayout
        android:paddingHorizontal="8dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.chip.Chip
            android:text="Anime List"
            android:id="@+id/anime_list_chip"
            android:layout_weight="1"
            android:textAlignment="center"
            android:layout_margin="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <com.google.android.material.chip.Chip
            android:text="Manga List"
            android:id="@+id/manga_list_chip"
            android:layout_weight="1"
            android:textAlignment="center"
            android:layout_margin="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <TextView
        android:layout_marginVertical="16dp"
        android:id="@+id/continue_watching_text"
        android:paddingHorizontal="18dp"
        style="?attr/textAppearanceHeadline5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Continue Watching" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="220dp">

        <androidx.recyclerview.widget.RecyclerView
            android:paddingHorizontal="18dp"
            android:clipToPadding="false"
            android:id="@+id/anime_continue_recycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/media_small_layout" />

        <include
            android:layout_marginStart="18dp"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:id="@+id/anime_continue_shimmer" layout="@layout/media_card_shimmer_list" />
    </RelativeLayout>


    <TextView
        android:layout_marginVertical="16dp"
        android:id="@+id/continue_reading_text"
        android:paddingHorizontal="18dp"
        style="?attr/textAppearanceHeadline5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Continue Reading" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="220dp">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/manga_continue_recycler"
            android:paddingHorizontal="18dp"
            android:clipToPadding="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/media_small_layout" />

        <include
            android:layout_marginStart="18dp"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:id="@+id/manga_continue_shimmer" layout="@layout/media_card_shimmer_list" />

    </RelativeLayout>


    <TextView
        android:layout_marginVertical="16dp"
        android:id="@+id/recommendations_reading_text"
        android:paddingHorizontal="18dp"
        style="?attr/textAppearanceHeadline5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Recommendations" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="220dp">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recommendations_recycler"
            android:paddingHorizontal="18dp"
            android:clipToPadding="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/media_small_layout" />

        <include
            android:layout_marginStart="18dp"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:id="@+id/recommendations_shimmer" layout="@layout/media_card_shimmer_list" />

    </RelativeLayout>

</LinearLayout>

</ScrollView>
